    <!-- Forma sem passar o id como parametro na url -->
    <% for (let i = 0; i < links.length; i++ ) {%>

        <div id="<%=links[i]._id%>">
            
            <form method="POST" action="/?_method=DELETE">

                <h2><%=links[i].title%></h2>

                <div><%=links[i].description%></div>
                <div><%=links[i].url%></div>

                <input type="text" name="id" value="<%=links[i]._id%>" hidden>
                
                <button type="submit">Delete</button>

            </form>

        </div>

    <% } %>



    <script>

        function removeLink(id){

            fetch('/' + id, {method: 'DELETE'}).then(res => {

                if(res.status == 200){

                    res.text().then( linkId => {
                    document.getElementById( linkId ).remove();
                    });

                } else {
                    res.json().then( err => {
                        console.log( err.message );
                        alert( err.message );
                    })
                }

                

            })

        }

    </script>

